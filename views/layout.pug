                  label.col-5 Enter code as seen:
                  .col-3
                    input#codeentered.form-control(type='text' name='randomcode' placeholder='')
                  .col-3
                    p#codes
                .row.offset-4
                  div
                    button#reset.btn.btn-secondary(type='reset')
                      i.bi.bi-arrow-repeat Reset
                  .ml-sm-3
                    button#send.btn.btn-success(type='submit')
                      i.bi.bi-telegram Send
  include includes/footer.pug